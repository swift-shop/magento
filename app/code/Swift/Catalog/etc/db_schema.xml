<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="product" resource="default" engine="innodb" comment="Product">
        <index referenceId="PRODUCT_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Product Id Column"/>
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Id Column"/>
        <column xsi:type="int" name="content" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Content Column"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="product_id"/>
        </constraint>
        <index referenceId="PRODUCT_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
    </table>
</schema>
